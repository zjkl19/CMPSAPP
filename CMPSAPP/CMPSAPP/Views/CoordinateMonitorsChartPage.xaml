<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             
             xmlns:oxy="clr-namespace:OxyPlot.Xamarin.Forms;assembly=OxyPlot.Xamarin.Forms"
             
             x:Class="CMPSAPP.Views.CoordinateMonitorsChartPage"
             xmlns:vm="clr-namespace:CMPSAPP.ViewModels">

    <ContentPage.BindingContext>
        <vm:CoordinateMonitorsChartViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout  Padding="0, 50, 0, 0">
                <oxy:PlotView Model="{Binding LineModelX}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="300"
                   />
                <oxy:PlotView Model="{Binding LineModelY}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="300"
                   />
                <oxy:PlotView Model="{Binding LineModelZ}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="300"
                   />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>